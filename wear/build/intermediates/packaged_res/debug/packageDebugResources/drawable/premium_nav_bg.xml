<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/premium_black" />
        </shape>
    </item>
    
    <!-- Premium glass overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#30F5F5DC"
                android:centerColor="#20F5F5DC"
                android:endColor="#10F5F5DC"
                android:angle="135" />
        </shape>
    </item>
    
    <!-- Subtle accent overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#15D4AF37"
                android:centerColor="#08D4AF37"
                android:endColor="#00D4AF37"
                android:angle="45" />
        </shape>
    </item>
</layer-list> 