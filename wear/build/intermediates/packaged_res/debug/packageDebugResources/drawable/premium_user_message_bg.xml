<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item android:left="1dp" android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#20000000" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Glass background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#40D4AF37"
                android:centerColor="#30D4AF37"
                android:endColor="#20D4AF37"
                android:angle="45" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="#40D4AF37" />
        </shape>
    </item>
    
    <!-- Inner highlight -->
    <item android:left="1dp" android:top="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#20FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="135" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list> 