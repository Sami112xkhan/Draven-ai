<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer shadow -->
    <item android:left="2dp" android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="#30000000" />
        </shape>
    </item>
    
    <!-- Glass background -->
    <item android:left="1dp" android:top="1dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#50D4AF37"
                android:centerColor="#40D4AF37"
                android:endColor="#30D4AF37"
                android:angle="45" />
            <stroke android:width="1dp" android:color="#40D4AF37" />
        </shape>
    </item>
    
    <!-- Inner highlight -->
    <item android:left="2dp" android:top="2dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#30FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="135" />
        </shape>
    </item>
</layer-list> 