<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/premium_dark_grey" />
        </shape>
    </item>
    
    <!-- Glass overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#20F5F5DC"
                android:centerColor="#10F5F5DC"
                android:endColor="#00F5F5DC"
                android:angle="45" />
        </shape>
    </item>
</layer-list> 