<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/premium_black">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="4dp">

        <!-- Header with Hamburger Menu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/glass_header_bg">

            <ImageButton
                android:id="@+id/menuButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_menu"
                android:background="@drawable/glass_menu_button"
                android:contentDescription="Menu"
                android:padding="6dp"
                android:tint="@color/premium_white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Draven AI"
                android:textColor="@color/premium_white"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Chat Area - Full Screen -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:background="@drawable/glass_chat_bg"
            android:padding="6dp"
            android:clipToPadding="false" />

        <!-- Status and Loading -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:indeterminateTint="@color/premium_gold"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Small" />

            <TextView
                android:id="@+id/statusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/premium_gold"
                android:textSize="11sp"
                android:gravity="center"
                android:padding="4dp"
                android:visibility="gone"
                android:background="@drawable/glass_status_bg" />

        </LinearLayout>

        <!-- Premium Glass Input Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/glass_input_container"
            android:padding="8dp"
            android:gravity="center_vertical">

            <!-- Text Input Field -->
            <EditText
                android:id="@+id/chatInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Ask anything..."
                android:textColor="@color/premium_white"
                android:textColorHint="@color/premium_silver"
                android:background="@drawable/glass_input_bg"
                android:padding="12dp"
                android:textSize="13sp"
                android:maxLines="3"
                android:inputType="textMultiLine"
                android:imeOptions="actionSend" />

            <!-- Voice Mode Toggle Button -->
            <ImageButton
                android:id="@+id/voiceModeButton"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_mic_off"
                android:background="@drawable/glass_voice_button"
                android:contentDescription="Voice Mode"
                android:padding="10dp"
                android:tint="@color/premium_white" />

            <!-- Voice Input Button -->
            <ImageButton
                android:id="@+id/voiceInputButton"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_mic"
                android:background="@drawable/glass_voice_button"
                android:contentDescription="Voice Input"
                android:padding="10dp"
                android:tint="@color/premium_white" />

        </LinearLayout>

    </LinearLayout>

    <!-- Navigation Drawer (Hamburger Menu) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/premium_nav_bg"
        android:elevation="8dp"
        app:itemTextColor="@color/premium_white"
        app:itemIconTint="@color/premium_gold"
        app:itemTextAppearance="@style/PremiumNavigationItemText"
        app:itemIconSize="24dp"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
