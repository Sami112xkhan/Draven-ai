<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/premium_dark_grey" />
        </shape>
    </item>
    
    <!-- Premium gradient overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#40F5F5DC"
                android:centerColor="#20F5F5DC"
                android:endColor="#10F5F5DC"
                android:angle="135" />
        </shape>
    </item>
    
    <!-- Subtle pattern overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#10D4AF37"
                android:centerColor="#05D4AF37"
                android:endColor="#00D4AF37"
                android:angle="45" />
        </shape>
    </item>
</layer-list> 